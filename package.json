{
	"name": "linrui-admin-svelte",
	"type": "module",
	"version": "0.0.1",
	"packageManager": "pnpm@8.15.5",
	"description": "admin templates for svelte",
	"license": "MIT",
	"homepage": "https://github.com/wellenliang/linrui-admin-svelte.git",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wellenliang/linrui-admin-svelte.git"
	},
	"bugs": {
		"url": "https://github.com/wellenliang/linrui-admin-svelte/issues"
	},
	"keywords": [
		"svelte",
		"admin",
		"svelte-admin",
		"svelte-kit"
	],
	"engines": {
		"node": ">= 14"
	},
	"scripts": {
		"init": "pnpm i",
		"dev:admin-melt": "pnpm run --filter linrui-admin-melt-ui dev",
		"build:admin-melt": "pnpm run --filter linrui-admin-melt-ui build",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"prepare": "npx simple-git-hooks"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@types/eslint": "^8.56.7",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"@types/node": "^20.12.7",
		"lint-staged": "^15.2.2",
		"rimraf": "^5.0.5",
		"simple-git-hooks": "^2.11.1",
		"typescript": "^5.4.5"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.{svelte, js, ts, jsx, tsx, json}": [
			"prettier --write",
			"eslint"
		]
	}
}
